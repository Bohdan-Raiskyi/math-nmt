generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  firstName String
  nickname  String
  email     String  @unique
  password  String
  avatarID  String? @db.Uuid

  avatar Image? @relation(fields: [avatarID], references: [id])

  UserTask      UserTask[]
  Plan          Plan[]
  PlanTopicTask PlanTopicTask[]
}

model Topic {
  id    String @id @default(uuid()) @db.Uuid
  title String

  Task          Task[]
  Plan          Plan[]
  PlanTopicTask PlanTopicTask[]
}

model Task {
  id          String @id @default(uuid()) @db.Uuid
  topicID     String @db.Uuid
  description String
  problemID   String @db.Uuid
  solutionID  String @db.Uuid

  topic    Topic @relation(fields: [topicID], references: [id])
  problem  Image @relation("ProblemImage", fields: [problemID], references: [id])
  solution Image @relation("SolutionImage", fields: [solutionID], references: [id])

  UserTask      UserTask[]      @relation(fields: [], references: [])
  PlanTopicTask PlanTopicTask[]
}

model UserTask {
  userID    String    @db.Uuid
  taskID    String    @db.Uuid
  passed_on DateTime?

  user User @relation(fields: [userID], references: [id])
  task Task @relation(fields: [taskID], references: [id])

  @@id([userID, taskID])
}

model Plan {
  id     String @id @default(uuid()) @db.Uuid
  userID String @db.Uuid

  User User @relation(fields: [userID], references: [id])

  PlanTopicTask PlanTopicTask[]
  Topic         Topic?          @relation(fields: [topicId], references: [id])
  topicId       String?         @db.Uuid
}

model PlanTopicTask {
  planID  String @db.Uuid
  topicID String @db.Uuid
  taskID  String @db.Uuid

  plan   Plan    @relation(fields: [planID], references: [id])
  topic  Topic   @relation(fields: [topicID], references: [id])
  task   Task    @relation(fields: [taskID], references: [id])
  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.Uuid

  @@id([planID, topicID, taskID])
}

model Image {
  id String @id @default(uuid()) @db.Uuid

  data Bytes

  ProblemTask  Task[] @relation("ProblemImage")
  SolutionTask Task[] @relation("SolutionImage")
  User         User[]
}
